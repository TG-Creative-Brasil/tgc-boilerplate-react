{
  "name": "boilerplate-react-ts",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Thiago Lins",
    "email": "falecom@thiagolins.dev.br",
    "url": "https://www.thiagolins.dev.br"
  },
  "scripts": {
    "dev": "vite --host --mode development",
    "start": "vite --host --mode production",
    "lint": "eslint src --max-warnings=0",
    "generate": "yarn plop --plopfile generators/plopfile.cjs",
    "build": "tsc && vite build --mode production",
    "build:dev": "tsc && vite build --mode development",
    "postinstall": "husky prepare",
    "preview": "vite preview",
    "push:patch": "npm version patch && git push",
    "push:minor": "npm version minor && git push",
    "push:major": "npm version major && git push",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix"
    ]
  },
  "dependencies": {
    "axios": "^1.2.1",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "i18next": "^24.2.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^3.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.0.1",
    "react-icons": "^5.0.1",
    "react-router-dom": "^7.1.0",
    "react-toastify": "^10.0.4",
    "styled-components": "^6.0.5",
    "uuid": "^11.0.3",
    "vanilla-masker": "^1.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/addon-actions": "^8.0.4",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.2",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/builder-vite": "^8.0.2",
    "@storybook/react": "^8.0.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/file-saver": "^2.0.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.25",
    "@types/vanilla-masker": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-loader": "^9.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-storybook": "^0.11.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.0.2",
    "pinst": "^3.0.0",
    "plop": "^4.0.0",
    "prettier": "^3.0.0",
    "storybook-dark-mode": "^4.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.0.3",
    "typescript-styled-plugin": "^0.18.2",
    "vite": "^6.0.5",
    "vite-plugin-i18n-resources": "^1.0.3",
    "vite-plugin-svgr": "^4.0.0",
